# –––––––––––––––––––––––––––––––––––––––––––––––
# ––  General  ––––––––––––––––––––––––––––––––––
# ––  https://editorconfig.org  –––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

# –––––––––––––––––––––––––––––––––––––––––––––––
# ––  Make / Just  ––––––––––––––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

[{Makefile,Justfile}]
indent_style = tab
indent_size = 4

# –––––––––––––––––––––––––––––––––––––––––––––––
# ––  Shell / Bash  –––––––––––––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

[*.{sh,bash}]
shell_variant      = bash
binary_next_line   = true
switch_case_indent = true
space_redirects    = false
keep_padding       = false
function_next_line = true
